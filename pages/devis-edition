<body>
  <header>
    <div class="left">
      <a href="private-dashboard.html#panel-devis" class="back-link">← Retour au tableau de bord</a>
      <img src="../img/logo.png" alt="Papo Rénov" class="logo" />
      <div>
        <h1>Édition du devis <span id="devis-id-label"></span></h1>
        <div class="subtitle">Ajoute les prestations depuis la grille tarifaire et génère le PDF.</div>
      </div>
    </div>
  </header>

  <div class="card" style="margin-bottom: 18px;">
    <h2>Informations du devis</h2>
    <p class="subtitle">Ces infos iront dans le Google Docs (client, adresse, objet).</p>
    <div class="meta-grid">
      <div>
        <label for="client">Client</label>
        <input id="client" type="text" placeholder="Nom / société" />
      </div>
      <div>
        <label for="date-devis">Date</label>
        <input id="date-devis" type="date" />
      </div>
      <div>
        <label for="adresse">Adresse du chantier / contexte</label>
        <textarea id="adresse" placeholder="Adresse, étage, accès, etc."></textarea>
      </div>
      <div>
        <label for="objet">Objet / description</label>
        <textarea id="objet" placeholder="Ex : Rénovation salle de bains complète..."></textarea>
      </div>
    </div>
  </div>

  <div class="shell">
    <section class="card">
      <h2>Grille tarifaire</h2>
      <p class="subtitle">Sélectionne les prestations à ajouter au devis.</p>

      <div class="filters" id="filters"></div>

      <div class="tarifs-list" id="tarifs-list">
        <p style="font-size:0.85rem;color:var(--text-soft);">Chargement des tarifs...</p>
      </div>
    </section>

    <section class="card">
      <h2>Contenu du devis</h2>
      <p class="subtitle">Lignes qui seront envoyées dans ton Google Docs.</p>

      <table class="basket-table" id="basket-table">
        <thead>
          <tr>
            <th class="num">#</th>
            <th>Prestation</th>
            <th>Qté</th>
            <th>Prix unitaire HT</th>
            <th>Total HT</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="basket-body">
          <tr>
            <td colspan="6" style="font-size:0.8rem;color:var(--text-soft);padding:8px 4px;">
              Aucune ligne pour l’instant. Ajoute des prestations à gauche.
            </td>
          </tr>
        </tbody>
      </table>

      <div class="basket-footer">
        <p><span class="label">Total HT</span><span class="value" id="total-ht">0.00 €</span></p>
        <p><span class="label">TVA (20%)</span><span class="value" id="total-tva">0.00 €</span></p>
        <p><span class="label">Total TTC</span><span class="value" id="total-ttc">0.00 €</span></p>
      </div>

      <div class="actions-row">
        <button type="button" class="btn-ghost" id="btn-clear">Vider le devis</button>
        <button type="button" class="btn-main" id="btn-generate">Générer le devis PDF</button>
      </div>

      <div id="message"></div>
    </section>
  </div>

  <script>
    const TARIFFS_URL =
      "https://script.google.com/macros/s/AKfycbww7_mLiUesnyQQHbQjwto1XsbtePXVW0UHU_sLYFLqCOFd0diTanXBWJVCqpePADzwow/exec";
    const GENERATION_URL =
      "https://script.google.com/macros/s/AKfycbwi9GX3vLf1L02F2zK-23fi8nQ8VDjYjEQ4UfXBs4jUHG5IOQdN3Z88k_MxaG7_VzAK/exec";

    let allTarifs = [];
    let currentCategory = "TOUS";
    let basket = [];

    function formatEUR(v) {
      return v.toFixed(2).replace(".", ",") + " €";
    }

    function getQueryParam(name) {
      const params = new URLSearchParams(window.location.search);
      return params.get(name) || "";
    }

    /* -------- Chargement des tarifs -------- */
    async function loadTarifs() {
      const list = document.getElementById("tarifs-list");
      list.innerHTML =
        '<p style="font-size:0.85rem;color:var(--text-soft);">Chargement des tarifs...</p>';

      try {
        const resp = await fetch(TARIFFS_URL + "?path=tarifs");
        const data = await resp.json();
        allTarifs = data.tarifs || data.rows || [];
        buildFilters();
        renderTarifs();
      } catch (err) {
        console.error(err);
        list.innerHTML =
          '<p style="color:#ff6b7a;font-size:0.85rem;">Erreur de chargement des tarifs.</p>';
      }
    }

    function buildFilters() {
      const filters = document.getElementById("filters");
      filters.innerHTML = "";
      const cats = Array.from(
        new Set(allTarifs.map((t) => t.categorie || "Autres"))
      ).sort();

      const btnAll = document.createElement("button");
      btnAll.textContent = "Tous";
      btnAll.className = "active";
      btnAll.addEventListener("click", () => {
        currentCategory = "TOUS";
        updateFilterButtons();
        renderTarifs();
      });
      filters.appendChild(btnAll);

      cats.forEach((cat) => {
        const btn = document.createElement("button");
        btn.textContent = cat;
        btn.dataset.cat = cat;
        btn.addEventListener("click", () => {
          currentCategory = cat;
          updateFilterButtons();
          renderTarifs();
        });
        filters.appendChild(btn);
      });
    }

    function updateFilterButtons() {
      document
        .querySelectorAll(".filters button")
        .forEach((btn) => btn.classList.remove("active"));

      document
        .querySelectorAll(".filters button")
        .forEach((btn) => {
          if (
            (currentCategory === "TOUS" && !btn.dataset.cat) ||
            btn.dataset.cat === currentCategory
          ) {
            btn.classList.add("active");
          }
        });
    }

    function renderTarifs() {
      const list = document.getElementById("tarifs-list");
      list.innerHTML = "";

      let tarifs = allTarifs;
      if (currentCategory !== "TOUS") {
        tarifs = tarifs.filter((t) => t.categorie === currentCategory);
      }

      if (!tarifs.length) {
        list.innerHTML =
          '<p style="font-size:0.8rem;color:var(--text-soft);">Aucun tarif pour cette catégorie.</p>';
        return;
      }

      tarifs.forEach((t) => {
        const item = document.createElement("div");
        item.className = "tarif-item";

        const main = document.createElement("div");
        main.className = "tarif-main";
        const tache = document.createElement("div");
        tache.className = "tache";
        tache.textContent = t.tache || "(sans libellé)";

        const meta = document.createElement("div");
        meta.className = "meta";
        const prix = Number(t["Prix particulier"] || t.prix_min || 0);
        const unite = t.unite || t.unité || "";
        meta.textContent =
          (prix ? formatEUR(prix) : "Tarif à définir") +
          (unite ? " • " + unite : "");

        if (t.notes) {
          meta.textContent += " • " + t.notes;
        }

        main.appendChild(tache);
        main.appendChild(meta);

        const actions = document.createElement("div");
        actions.className = "tarif-actions";

        const qtyInput = document.createElement("input");
        qtyInput.type = "number";
        qtyInput.min = "1";
        qtyInput.step = "1";
        qtyInput.value = "1";

        const btnAdd = document.createElement("button");
        btnAdd.className = "btn-pill btn-accent";
        btnAdd.textContent = "+ Ajouter";

        btnAdd.addEventListener("click", () => {
          const qte = Number(qtyInput.value) || 1;
          addToBasket({
            tache: t.tache || "",
            prix_unitaire: prix,
            quantite: qte,
          });
        });

        actions.appendChild(qtyInput);
        actions.appendChild(btnAdd);

        item.appendChild(main);
        item.appendChild(actions);
        list.appendChild(item);
      });
    }

    /* -------- Panier / contenu du devis -------- */

    function addToBasket(line) {
      if (!basket.length) {
        document.getElementById("basket-body").innerHTML = "";
      }
      basket.push(line);
      renderBasket();
    }

    function renderBasket() {
      const tbody = document.getElementById("basket-body");
      tbody.innerHTML = "";

      basket.forEach((line, idx) => {
        const tr = document.createElement("tr");

        const tdNum = document.createElement("td");
        tdNum.className = "num";
        tdNum.textContent = idx + 1;

        const tdLib = document.createElement("td");
        tdLib.textContent = line.tache;

        const tdQty = document.createElement("td");
        const qtyInput = document.createElement("input");
        qtyInput.type = "number";
        qtyInput.min = "0";
        qtyInput.step = "0.5";
        qtyInput.value = line.quantite;
        qtyInput.addEventListener("input", () => {
          line.quantite = Number(qtyInput.value) || 0;
          updateTotals();
          renderBasket();
        });
        tdQty.appendChild(qtyInput);

        const tdPu = document.createElement("td");
        const puInput = document.createElement("input");
        puInput.type = "number";
        puInput.step = "0.01";
        puInput.value = line.prix_unitaire;
        puInput.addEventListener("input", () => {
          line.prix_unitaire = Number(puInput.value) || 0;
          updateTotals();
          renderBasket();
        });
        tdPu.appendChild(puInput);

        const tdTotal = document.createElement("td");
        const totalLigne = (line.quantite || 0) * (line.prix_unitaire || 0);
        tdTotal.textContent = formatEUR(totalLigne);

        const tdDel = document.createElement("td");
        const btnDel = document.createElement("button");
        btnDel.className = "btn-pill";
        btnDel.textContent = "✕";
        btnDel.style.background = "transparent";
        btnDel.style.color = "var(--text-soft)";
        btnDel.onclick = () => {
          basket.splice(idx, 1);
          if (!basket.length) {
            tbody.innerHTML =
              '<tr><td colspan="6" style="font-size:0.8rem;color:var(--text-soft);padding:8px 4px;">Aucune ligne pour l’instant. Ajoute des prestations à gauche.</td></tr>';
            updateTotals();
          } else {
            renderBasket();
          }
        };
        tdDel.appendChild(btnDel);

        tr.appendChild(tdNum);
        tr.appendChild(tdLib);
        tr.appendChild(tdQty);
        tr.appendChild(tdPu);
        tr.appendChild(tdTotal);
        tr.appendChild(tdDel);
        tbody.appendChild(tr);
      });

      updateTotals();
    }

    function updateTotals() {
      let totalHT = 0;
      basket.forEach((l) => {
        totalHT += (l.quantite || 0) * (l.prix_unitaire || 0);
      });
      const tva = totalHT * 0.2;
      const ttc = totalHT + tva;

      document.getElementById("total-ht").textContent = formatEUR(totalHT);
      document.getElementById("total-tva").textContent = formatEUR(tva);
      document.getElementById("total-ttc").textContent = formatEUR(ttc);
    }

    /* -------- Envoi vers Apps Script pour générer le devis -------- */

    async function generateDevis() {
      const msg = document.getElementById("message");
      msg.textContent = "";
      msg.className = "";

      if (!basket.length) {
        msg.textContent = "Ajoute au moins une ligne au devis.";
        msg.className = "error";
        return;
      }

      const client = document.getElementById("client").value.trim();
      const adresse = document.getElementById("adresse").value.trim();
      const objet = document.getElementById("objet").value.trim();
      const dateDevis = document.getElementById("date-devis").value;
      const idDevis = getQueryParam("id") || "";

      const totalHTText = document
        .getElementById("total-ht")
        .textContent.replace(" €", "")
        .replace(",", ".");
      const totalTTCText = document
        .getElementById("total-ttc")
        .textContent.replace(" €", "")
        .replace(",", ".");
      const montant_ht = Number(totalHTText) || 0;
      const montant_ttc = Number(totalTTCText) || 0;

      const lignes = basket.map((l, idx) => ({
        num: idx + 1,
        tache: l.tache,
        quantite: l.quantite,
        prix_unitaire: l.prix_unitaire,
        total_ligne: (l.quantite || 0) * (l.prix_unitaire || 0),
      }));

      const params = new URLSearchParams();
      params.append("path", "bo");
      params.append("action", "create_devis");
      if (idDevis) params.append("id_devis", idDevis);
      if (client) params.append("client", client);
      if (adresse) params.append("adresse", adresse);
      if (objet) params.append("commentaire", objet);
      if (dateDevis) params.append("date_devis", dateDevis);
      params.append("montant_ht", String(montant_ht));
      params.append("montant_ttc", String(montant_ttc));
      params.append("lignes", JSON.stringify(lignes));

      try {
        msg.textContent = "Génération du devis en cours…";
        const resp = await fetch(GENERATION_URL, {
          method: "POST",
          body: params,
        });
        const json = await resp.json().catch(() => ({}));

        if (json && json.ok) {
          msg.textContent =
            "Devis généré. Tu peux le retrouver dans ton Drive / backoffice.";
          msg.className = "success";
          if (json.pdfUrl) {
            window.open(json.pdfUrl, "_blank");
          }
        } else {
          console.error(json);
          msg.textContent =
            "Erreur lors de la génération du devis (côté serveur).";
          msg.className = "error";
        }
      } catch (err) {
        console.error(err);
        msg.textContent = "Erreur réseau, impossible d’appeler l’API.";
        msg.className = "error";
      }
    }

    function clearDevis() {
      basket = [];
      renderBasket();
      const tbody = document.getElementById("basket-body");
      tbody.innerHTML =
        '<tr><td colspan="6" style="font-size:0.8rem;color:var(--text-soft);padding:8px 4px;">Aucune ligne pour l’instant. Ajoute des prestations à gauche.</td></tr>';
      updateTotals();
    }

    /* -------- Init -------- */

    window.addEventListener("DOMContentLoaded", () => {
      const today = new Date().toISOString().split("T")[0];
      document.getElementById("date-devis").value = today;
      const idDevis = getQueryParam("id");
      if (idDevis) {
        document.getElementById("devis-id-label").textContent = idDevis;
      }

      document
        .getElementById("btn-generate")
        .addEventListener("click", generateDevis);
      document
        .getElementById("btn-clear")
        .addEventListener("click", clearDevis);

      loadTarifs();
    });
  </script>
</body>
</html>
