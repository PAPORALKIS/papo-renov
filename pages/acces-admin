<script>
  // Code d'acc√®s administrateur (diff√©rent du code PRO partenaires)
  const ADMIN_CODE = "fang"; // change-le si tu veux

  const inputAdmin   = document.getElementById('admin-code');
  const btnAdmin     = document.getElementById('admin-enter');
  const adminError   = document.getElementById('admin-error');

  function tryAdminLogin(){
    const value = (inputAdmin.value || "").trim();
    if(!value){
      adminError.textContent = "Merci de saisir votre code administrateur.";
      return;
    }

    if(value === ADMIN_CODE){
      adminError.textContent = "";
      // on stocke un flag local pour indiquer que l'admin est authentifi√©
      localStorage.setItem("admin_auth", "true");
      // redirection vers le dashboard priv√©
      window.location.href = "private-dashboard.html";
    }else{
      adminError.textContent = "Code incorrect.";
    }
  }

  btnAdmin.addEventListener('click', tryAdminLogin);
  inputAdmin.addEventListener('keydown', (e)=>{
    if(e.key === 'Enter'){ tryAdminLogin(); }
  });
</script>

